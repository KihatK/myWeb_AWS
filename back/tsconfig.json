{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,  //export로 된 것들을 객체로 모아서 import * as를 사용하지 않게 함.
        "allowSyntheticDefaultImports": true,  //import 문법을 사용할 수 있게 함
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",  //dist 폴더를 만들어서 그 안에 js 파일들을 보관함.
        "typeRoots": ["./types"]
    },
}